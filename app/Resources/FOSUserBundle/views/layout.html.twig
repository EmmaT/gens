<!DOCTYPE html>
<!--[if IE 7 ]><html class="ie ie7" lang="en"> <![endif]-->
<!--[if IE 8 ]><html class="ie ie8" lang="en"> <![endif]-->
<!--[if (gte IE 9)|!(IE)]><!--><html lang="es" class="ie ie9"> <!--<![endif]-->
<head>
  <!-- Meta Tags -->
  <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta name="description" content="Gens Sakya">
        <meta name="author" content="Giancarlo Ventura Granados (Sakya Stelios)">
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        <title>{% block title %}Gens Sakya |Biblioteca de libros electr√≥nicos{% endblock %}</title> 
        <link href='http://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700,800,400italic,600italic,700italic' rel='stylesheet' type='text/css'>

        <!-- Stylesheets -->      
        {% block stylesheets %}
            {% stylesheets  'bundles/Gens/css/bs_grid.css'
                            'bundles/Gens/css/theme.css'
                            'bundles/Gens/css/bs_grid.css'
                            'bundles/Gens/css/plugins.css'
                            'bundles/Gens/css/responsive.css'
                            'bundles/Gens/css/theme_settings.css'
                            'bundles/Gens/css/bs_grid.css'
                            'bundles/Gens/css/bs_grid.css'
                            'bundles/Gens/css/color_theme.css'
                           filter='cssrewrite'%}
                <link rel="stylesheet" media="screen" href="{{ asset_url }}" />
            {% endstylesheets %}
        {% endblock %}
    </head>

    <body>
        {% for type, messages in app.session.flashbag.all() %}
            {% for message in messages %}
                <div class="flash-{{ type }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}

        {# Begin navbar #}
        <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
          <div class="container">
            <div class="navbar-header">
              <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
              </button>
              <a class="navbar-brand" href="{{ path('gens_homepage') }}">Gens Sakya</a>
            </div>
            <div class="navbar-collapse collapse">
              <form class="navbar-form navbar-right" role="form">
                <div class="form-group">
                  <input type="text" placeholder="Email" class="form-control">
                </div>
                <div class="form-group">
                  <input type="password" placeholder="Password" class="form-control">
                </div>
                <button type="submit" class="btn btn-success">Login</button>
                <button type="submit" class="btn btn-success">Registro</button>
              </form>
            </div><!--/.navbar-collapse -->
          </div>
        </div>
        {# End navbar #}


        {% block fos_user_content %}
        {% endblock fos_user_content %}

        {% block javascripts %}
        <script src="http://code.jquery.com/jquery-1.9.1.min.js"></script>
        <script src="js/modernizr.custom.js"></script>
        <script src="http://code.jquery.com/ui/1.10.2/jquery-ui.min.js" type="text/javascript"></script>

        {% javascripts '@GensBundle/Resources/public/js/theme.js'
                       '@GensBundle/Resources/public/js/grid.js'
                       '@GensBundle/Resources/public/js/jribbble.js' %}
            <script type="text/javascript" src="{{ asset_url }}"></script>
        {% endjavascripts %}
        {% endblock %}
    </body>
</html>
