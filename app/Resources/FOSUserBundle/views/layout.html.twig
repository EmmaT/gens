<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta name="description" content="Gens Sakya">
        <meta name="author" content="Giancarlo Ventura Granados (Sakya Stelios)">
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        <title>{% block title %}GensSakya!{% endblock %}</title>
        
        {% block stylesheets %}
        <link href='http://fonts.googleapis.com/css?family=Open+Sans:400,400italic,600,600italic,700' rel='stylesheet' type='text/css'>
        {% stylesheets '@GensBundle/Resources/public/css/bootstrap.css'
                       '@GensBundle/Resources/public/css/style.css'
                       '@GensBundle/Resources/public/css/flexslider.css'
                       '@GensBundle/Resources/public/css/prettyPhoto.css'
                       '@GensBundle/Resources/public/css/fullwidth.css'
                       '@GensBundle/Resources/public/css/rs-plugin/css/settings.css'
                        %}
        <link rel="stylesheet" media="screen" href="{{ asset_url }}" />
        {% endstylesheets %}
        {% endblock %}
    </head>

    <body>

    <!-- header section starts
================================================== -->
<section id="header">
  <div class="container clearfix">
    <div class="row"> 
      
      <!--logo starts-->
      <div class="col-md-4 pos-rel"> <a href="index.html"><img src="img/logo.png" width="210" height="78" alt="logo"></a>
      </div>
      <!--logo ends--> 
      
      <!--social starts-->
      <div class="col-md-8">
        <ul class="social">
          <li class="pos-rel">
            <div class="search-header">
              <form class="searchform" method="get" action=".">
                <input name="s" type="text" placeholder="" />
              </form>
            </div>
          </li>
          <li class="twitter-icon"><a href="#"><img src="img/icons/icon-twitter.png" alt="icon"></a></li>
          <li class="facebook-icon"><a href="#"><img src="img/icons/icon-facebook.png" alt="icon"></a></li>
        </ul>
        <div class="clearfix"></div>
      </div>
      <!--social ends--> 
      
      <!--menu starts-->

      <div class="col-md-12">
        <div class="menu-wrapper">
          <div id="smoothmenu" class="ddsmoothmenu">
            <ul>
              <li><a href="contact.html">Contact</a></li>
            </ul>
          </div>
          <ul class="inline-right">
            <li><img src="img/icons/icon-phone.png" alt="icon"> (+91) 123 456-7892</li>
            <li><img src="img/icons/icon-mail.png" alt="icon"> <a href="#">sayhello@megabiz.com</a></li>
          </ul>
          <div class="clearfix"></div>
        </div>
      </div>
      <!--menu ends--> 
      
    </div>
  </div>
</section>
<!-- header section ends
================================================== --> 

        {% for type, messages in app.session.flashbag.all() %}
            {% for message in messages %}
                <div class="flash-{{ type }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}


        {% block fos_user_content %}
        {% endblock fos_user_content %}

